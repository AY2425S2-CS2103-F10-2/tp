<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<?import javafx.scene.layout.AnchorPane?>
<fx:root resizable="true" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" maxWidth="1000.0" maxHeight="450.0">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>

      <AnchorPane>
        <VBox alignment="CENTER" spacing="10" fx:id="helpMessageContainer" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
          <children>
            <HBox fx:id="helpHBox" alignment="CENTER">
              <children>
                <Label fx:id="helpMessage" text="Label" />
                <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL" />
              </children>
            </HBox>
            <TableView fx:id="commandTable" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn text="Action" fx:id="actionColumn" prefWidth="300"/>
                <TableColumn text="Format" fx:id="formatColumn" prefWidth="600"/>
              </columns>
            </TableView>
          </children>
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>
        </VBox>
      </AnchorPane>
    </Scene>
  </scene>
</fx:root>
