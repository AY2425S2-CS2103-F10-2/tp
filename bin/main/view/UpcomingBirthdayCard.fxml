<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <HBox alignment="CENTER" minHeight="50" GridPane.columnIndex="0" spacing="20" prefWidth="500" minWidth="200">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>

            <VBox alignment="CENTER_LEFT" HBox.hgrow="NEVER" spacing="5" minWidth="200" prefWidth="300">
                <Label fx:id="name" styleClass="cell_big_label"/>
                <Label fx:id="birthday" styleClass="cell_small_label, client-birthday"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS" />

            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <Label fx:id="daysUntil" prefWidth="300" minWidth="50"/>
            </HBox>
        </HBox>
    </GridPane>
</HBox>
