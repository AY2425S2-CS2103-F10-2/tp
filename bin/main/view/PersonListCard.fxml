<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <HBox alignment="CENTER" minHeight="105" GridPane.columnIndex="0" spacing="20">
        <padding>
            <Insets top="5" right="5" bottom="5" left="15" />
        </padding>

        <VBox alignment="CENTER_LEFT" HBox.hgrow="NEVER" spacing="5">
            <FlowPane fx:id="tags" />
            <HBox spacing="0.5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                      <!-- Ensures that the label text is never truncated -->
                      <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
            </HBox>
            <Label fx:id="premiumList" styleClass="cell_small_label, client-premium" text="\$premium" />
        </VBox>

        <Region HBox.hgrow="ALWAYS" />

        <HBox alignment="CENTER_LEFT" spacing="7" prefWidth="600" minWidth="250">
            <Label fx:id="phone" styleClass="cell_small_label, client-phone" text="\$phone" />
            <Label fx:id="address" styleClass="cell_small_label, client-address" text="\$address" />
            <Label fx:id="email" styleClass="cell_small_label, client-email" text="\$email" />
            <Label fx:id="birthday" styleClass="cell_small_label, client-birthday" text="\$birthday" />
        </HBox>
    </HBox>
  </GridPane>
</HBox>
